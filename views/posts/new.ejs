<!DOCTYPE html>
<html>
 <head>
  
 </head>
 <body>
  

  <div class="container post post-new">
   

   <div class="buttons">
    <a class="btn btn-default" href="/posts">Back</a>
   </div>

   <form class="post-form form-horizontal" action="/posts" method="post">
    <div class="contentBox">
     <h3 class="contentBoxTop">New Post</h3>
     <fieldset>
      <div class="form-group">
          <select id="category" name="category">
            <option value="javascript">javascript</option>
            <option value="node">node</option>
            <option value="vue">vue</option>
            <option value="react">react</option>
          </select>
       <label for="title" class="col-sm-2 control-label">Title</label>
       <div class="col-sm-10">
        <input class="form-control" type="text" id="title" name="title" value="">
       </div>
      </div>
      <div class="form-group">
       <label for="body" class="col-sm-2 control-label">Body</label>
       <div class="col-sm-10">
        <textarea class="form-control" id="summernote" name="body" class="editor-body"></textarea>
       </div>
      </div>
     </fieldset>
    </div>
    <div class="buttons">
     <button type="submit" class="btn btn-default">Submit</button>
    </div>
   </form>

  </div> <!-- container end -->
 </body>
</html>